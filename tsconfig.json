{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "lib": ["es6", "dom"],
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./build",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["./modules/*"],
      "@entities/*": ["./entities/*"],
      "@libs/*": ["./libs/*"],
      "@middlewares/*": ["./middlewares/*"],
      "@utils/*": ["./utils/*"]
    },
    "incremental": true
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts"]
}
